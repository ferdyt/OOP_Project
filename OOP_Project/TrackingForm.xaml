<Page x:Class="OOP_Project.TrackingForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOP_Project"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="TrackingForm"
      Background="#D9D9D9">

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="TrackingPage" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid x:Name="TrackingPage" Width="437" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Введіть ТТН щоб перевірити статус посилки" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InvoiceTextBox" Grid.Column="0" Width="340" Height="38" Style="{StaticResource ResourceKey=TextBoxStyle}" HorizontalAlignment="Left"/>

            <Button x:Name="OKButton" Grid.Column="1" Width="84" Height="38" Style="{StaticResource ResourceKey=DarkButton}" Content="OK" Margin="10,0,0,0"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="59*"/>
                <ColumnDefinition Width="378*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="OutputLabel" Content="Test" FontSize="16" HorizontalAlignment="Left" Grid.Column="1" Margin="141,0,0,0"/>
        </Grid>
        <Grid Grid.Row="3">
            <Button x:Name="PersonalAccountButton" Content="Особистий кабінет" Width="173" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=DarkButton}"/>
        </Grid>
    </Grid>
</Page>
